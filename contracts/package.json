{
  "name": "abm-diora-nft",
  "version": "1.0.0",
  "description": "Official ABM Foundation NFT Collection for ABM Diora Blockchain",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.js --network dioraTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network diora",
    "verify": "hardhat verify",
    "generate-metadata": "python3 generate_metadata.py",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "gas-report": "REPORT_GAS=true hardhat test",
    "node:local": "hardhat node",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "solhint": "solhint 'contracts/**/*.sol'",
    "lint": "npm run prettier && npm run solhint"
  },
  "keywords": [
    "nft",
    "erc721",
    "ethereum",
    "solidity",
    "blockchain",
    "abm-foundation",
    "diora",
    "smart-contracts",
    "defi",
    "layer1"
  ],
  "author": "ABM Foundation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DioraFund/diora-go-blockchain"
  },
  "homepage": "https://diorafund.github.io/diora-whitepaper/",
  "bugs": {
    "url": "https://github.com/DioraFund/diora-go-blockchain/issues"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.0",
    "chai": "^4.3.8",
    "ethers": "^6.4.0",
    "hardhat": "^2.17.0",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.8.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "contracts/",
    "scripts/",
    "metadata/",
    "artifacts/",
    "hardhat.config.js"
  ],
  "publishConfig": {
    "access": "public"
  }
}
